<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:id="@+id/all"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_3BA370"
        android:layout_height="@dimen/view_size_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:text="搜索店铺"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/view_size_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/provinces_text"
                android:layout_width="@dimen/view_size_400"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/view_size_10"
                android:ellipsize="end"
                android:drawableRight="@mipmap/xiala_icon"
                android:background="@drawable/side969696_6dp"
                android:layout_marginRight="@dimen/view_size_10"
                android:text="省"
                android:textColor="@color/light"
                />
            <TextView
                android:id="@+id/city_text"
                android:layout_width="@dimen/view_size_400"
                android:layout_marginLeft="@dimen/view_size_5"
                android:layout_marginRight="@dimen/view_size_5"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/view_size_10"
                android:ellipsize="end"
                android:drawableRight="@mipmap/xiala_icon"
                android:background="@drawable/side969696_6dp"
                android:text="市"
                android:textColor="@color/light"
                />

            <TextView
                android:id="@+id/area_text"
                android:layout_width="@dimen/view_size_400"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_weight="1"
                android:padding="@dimen/view_size_10"
                android:ellipsize="end"
                android:drawableRight="@mipmap/xiala_icon"
                android:background="@drawable/side969696_6dp"
                android:text="区"
                android:textColor="@color/light"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/fullname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_20"
            android:padding="@dimen/view_size_10"
            android:hint="请输入店铺关键字"
            android:textColor="@color/light"
            android:background="@drawable/side969696_6dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_50">

            <TextView
                android:id="@+id/search"
                android:layout_width="@dimen/view_size_100"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_size_10"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_3ba370_6dp"
                android:text="搜索"
                android:textColor="@color/white"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>