<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/bc"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50"
        android:background="@color/color_262523"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_size_20"
                android:layout_height="@dimen/view_size_20"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_icon" />

            <TextView
                android:id="@+id/textView_title_title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_toRightOf="@+id/back"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我的资金"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="银行卡"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/view_size_20"
            android:layout_height="@dimen/view_size_20"
            android:layout_alignParentRight="true"
            android:background="@mipmap/card_add" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/realname_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_size_10"
        android:layout_marginLeft="@dimen/view_size_10"
        android:layout_marginRight="@dimen/view_size_10"
        android:background="@drawable/white50_6dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/view_size_20"
            android:layout_height="@dimen/view_size_20"
            android:background="@mipmap/card_realname"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3BA370"
            android:layout_marginLeft="@dimen/view_size_10"
            android:text="为了确保资金安全,绑卡需要实名"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3BA370"
            android:layout_marginLeft="@dimen/view_size_10"
            android:text="去实名 >"
            android:gravity="right"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_size_10"
        android:divider="@null"
        >


    </ListView>

</LinearLayout>
