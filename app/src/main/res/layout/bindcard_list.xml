<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:id="@+id/bind_card_re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_120"

        >


        <ImageView
            android:id="@+id/logo_bc"
            android:layout_width="@dimen/view_size_120"
            android:layout_height="@dimen/view_size_120"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_size_30"
            />

        <RelativeLayout
            android:id="@+id/logo_re"
            android:layout_width="@dimen/view_size_55"
            android:layout_height="@dimen/view_size_55"
            android:layout_marginTop="@dimen/view_size_15"
            android:layout_marginLeft="@dimen/view_size_15"
            android:background="@drawable/white_circle_bc"

            >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/view_size_50"
            android:layout_height="@dimen/view_size_50"
           android:layout_centerInParent="true"

            />
        </RelativeLayout>
        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_25"
            android:layout_marginRight="@dimen/view_size_10"
            android:layout_toRightOf="@+id/logo_re"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/view_size_10"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_size_15"
            android:layout_marginTop="@dimen/view_size_10"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_re"
            android:layout_toRightOf="@+id/logo_re"
            android:layout_marginLeft="@dimen/view_size_10"
            android:textColor="@color/white"
            android:textSize="@dimen/view_size_20"

            />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_10"></LinearLayout>


</LinearLayout>