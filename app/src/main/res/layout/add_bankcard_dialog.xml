<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/view_size_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/view_size_30"
        android:layout_height="@dimen/view_size_30"
        android:layout_alignParentRight="true"
        android:background="@mipmap/close"

        />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_size_10"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/view_size_10"
        android:text="新增银行卡"
        android:background="@drawable/btn_3ba370_top_6dp"
        android:textSize="@dimen/text_size_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_6dp_bottom"
        android:padding="@dimen/view_size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_969696"
            android:text="★ 请绑定持卡人本人的银行卡"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginTop="@dimen/view_size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="持卡人"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:gravity="right"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:id="@+id/bank_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="卡号"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/bank_card"
                android:layout_toRightOf="@+id/bank_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="right"
                android:hint="请输入银行卡号"
                android:maxLength="19"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:id="@+id/bank_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="所属银行"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/bank_name"
                android:layout_toRightOf="@+id/bank_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:background="@null"
                android:ellipsize="end"
                android:maxLines="1"
                android:inputType="text"
                android:gravity="right"
                android:hint="请输入银行名称"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:id="@+id/sub_bank_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="开户行"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/sub_bank_name"
                android:layout_toRightOf="@+id/sub_bank_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:background="@null"
                android:ellipsize="end"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="right"
                android:hint="请输入开户支行名称"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:background="@color/color_f0f0f0" />


        <TextView
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/view_size_50"
            android:paddingLeft="@dimen/view_size_50"
            android:paddingTop="@dimen/view_size_10"
            android:paddingBottom="@dimen/view_size_10"
            android:text="确定"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_size_20"
            android:layout_marginBottom="@dimen/view_size_20"
            android:background="@drawable/btn_3ba370_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

</LinearLayout>