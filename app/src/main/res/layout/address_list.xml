<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_top_6dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/txtNameAndPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                tools:text="历史老    13127755847" />


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_9"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12"
                tools:text="slskdskdkdssisdidsidsidsidsi" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/view_size_9"
                android:background="#E8E8E8" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/select_circle_tick_checked" />


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/imgStatus"
                android:drawablePadding="@dimen/view_size_3"
                android:paddingLeft="@dimen/view_size_6"
                android:paddingRight="@dimen/view_size_10"
                android:paddingBottom="@dimen/view_size_2"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/add_delete"
                android:drawablePadding="@dimen/view_size_3"
                android:gravity="center"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10"
                android:paddingBottom="@dimen/view_size_2"
                android:text="删除"
                android:textSize="@dimen/text_size_10"

                />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_size_20"
                android:layout_toLeftOf="@+id/delete"
                android:drawableStart="@mipmap/add_edit"
                android:drawablePadding="@dimen/view_size_3"
                android:gravity="center"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10"
                android:paddingBottom="@dimen/view_size_2"
                android:text="编辑"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/text_size_10"

                />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_15" />


</LinearLayout>