<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_logo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/logo_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_size_20"
        android:layout_marginRight="@dimen/view_size_20"
        android:padding="@dimen/view_size_5"
        android:visibility="gone"
        android:background="@drawable/order_black_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/logo_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_size_5"
            android:text="5"
            android:textColor="@color/color_ed7043"
            />
        <TextView
            android:layout_marginLeft="@dimen/view_size_5"
            android:layout_marginRight="@dimen/view_size_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="跳过广告"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logo_lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/view_size_3"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="广"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="告"
            />

    </LinearLayout>

</RelativeLayout>
