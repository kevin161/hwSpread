<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50"
        android:background="@color/black"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_size_17"
                android:layout_height="@dimen/view_size_17"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_icon" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:visibility="gone"
                android:layout_toRightOf="@+id/back"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView_title_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="验证手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="手机号"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_20"
                android:layout_toLeftOf="@+id/phone_line"
                android:layout_toRightOf="@+id/phone_text"
                android:background="@null"
                android:gravity="center"
                android:maxLength="11"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />

            <TextView
                android:id="@+id/phone_line"
                android:layout_width="@dimen/view_size_1"
                android:layout_height="@dimen/view_size_10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/forget_get_captcha" />


            <TextView
                android:id="@+id/forget_get_captcha"
                android:layout_width="@dimen/view_size_80"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_marginRight="@dimen/view_size_10"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_marginLeft="@dimen/view_size_10"
            android:layout_marginRight="@dimen/view_size_10"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="手机验证码"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:background="@null"
                android:maxLength="6"
                android:digits="0123456789"
                android:gravity="right"
                android:hint="请输入验证码"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_marginLeft="@dimen/view_size_10"
            android:layout_marginRight="@dimen/view_size_10"
            android:background="@color/color_f0f0f0" />


    </LinearLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_30"
        android:layout_marginTop="@dimen/view_size_50"
        android:layout_marginRight="@dimen/view_size_30"
        android:background="@drawable/btn_3ba370_6dp"
        android:gravity="center"
        android:padding="@dimen/view_size_10"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />


</LinearLayout>