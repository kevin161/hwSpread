<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f0f0f0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
                android:background="@color/color_262523"
                android:padding="@dimen/view_size_10">

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/view_size_20"
                        android:layout_height="@dimen/view_size_20"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/back_icon" />

                    <TextView
                        android:id="@+id/textView_title_title_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_size_10"
                        android:layout_toRightOf="@+id/back"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:text="该页正在建设中，敬请期待！"
                android:textColor="@color/color_969696"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/view_size_100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:text="This page is under constroction.so stay tuned!"
                android:textColor="@color/color_969696"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/view_size_10"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_size_40"
                android:layout_marginRight="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_100"
                android:background="@mipmap/coming"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>