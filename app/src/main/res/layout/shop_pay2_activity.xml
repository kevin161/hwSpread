<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include layout="@layout/title_bar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/view_size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_10"
            android:text="消费茶贝"
            android:textColor="@color/color_d2d2d2" />

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_10"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_size_10"
            android:layout_height="@dimen/view_size_0.1"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/view_size_10">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/light"
                android:layout_marginRight="@dimen/view_size_10"
                android:layout_toLeftOf="@+id/shop_id"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0.1"
            android:background="@color/color_f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/view_size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费人数"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_size_15"
        android:background="@drawable/white_6dp"
        android:hint="请输入交易密码"
        android:inputType="textPassword"
        android:padding="@dimen/view_size_10"
        android:textColor="@color/light"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_50"
        android:layout_marginTop="@dimen/view_size_30"
        android:layout_marginRight="@dimen/view_size_50"
        android:background="@drawable/btn_3ba370_6dp"
        android:gravity="center"
        android:padding="@dimen/view_size_15"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />


</LinearLayout>