<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/all"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_10"
        android:layout_marginRight="@dimen/view_size_10">

        <com.leisurely.spread.UI.view.ContentViewPager
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false" />

        <TextView
            android:id="@+id/num"
            android:layout_width="@dimen/view_size_30"
            android:layout_height="@dimen/view_size_30"
            android:layout_alignBottom="@+id/view_page"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_size_15"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/black50_20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/view_page"
            android:layout_marginTop="-20dp"
            android:background="@drawable/f3f3f3_12dp"
            android:padding="@dimen/view_size_10"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/alias_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/shop_id_re"
                    android:layout_marginRight="@dimen/view_size_10"
                    android:layout_centerVertical="true"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_18"/>

                <LinearLayout
                    android:id="@+id/shop_id_re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_size_20"
                        android:src="@mipmap/dianpuid"/>
                    <TextView
                        android:id="@+id/shop_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:minWidth="@dimen/view_size_80"
                        />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/view_size_10"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/view_size_15"
                    android:layout_height="@dimen/view_size_15"
                    android:src="@mipmap/shop_address"/>

                <TextView
                    android:id="@+id/qu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/light"/>

            </LinearLayout>

            <TextView
                android:id="@+id/full_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_25"
                android:layout_marginTop="@dimen/view_size_8"
                android:textColor="#a6a6a6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/view_size_10"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/view_size_15"
                    android:layout_height="@dimen/view_size_15"
                    android:src="@mipmap/shop_phone"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/light"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/shoucang"
                    android:layout_marginRight="@dimen/view_size_10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/view_size_15"
                        android:layout_height="@dimen/view_size_15"
                        android:src="@mipmap/shop_shop"/>

                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_size_10"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/light"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/shoucang"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weishoucang">



                </ImageView>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_10" />
</LinearLayout>