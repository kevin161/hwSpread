<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sidefbdb9d_32353c_6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_size_11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/day_re"
            android:layout_width="@dimen/view_size_70"
            android:layout_height="@dimen/view_size_100"
            android:background="@mipmap/qidonglianghua_days">

            <TextView
                android:id="@+id/day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_size_12"
                android:text="量化资产"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_size_25"
                android:text="360"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_17" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rate_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_size_20"
            android:layout_marginRight="@dimen/view_size_10"
            android:layout_marginTop="@dimen/view_size_15"
            android:layout_toLeftOf="@+id/status"
            android:layout_toRightOf="@+id/day_re"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/view_size_90"
                    android:layout_height="wrap_content"
                    android:text="日奖励:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/day_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/view_size_90"
                    android:layout_height="wrap_content"
                    android:text="量化:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/quantification_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="@dimen/view_size_70"
            android:layout_height="@dimen/view_size_70"
            android:layout_alignParentRight="true"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rate_li"
            android:layout_below="@+id/rate_li"
            android:layout_marginRight="@dimen/view_size_10"
            android:layout_marginTop="@dimen/view_size_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/view_size_90"
                    android:layout_height="wrap_content"
                    android:text="量化数量:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/view_size_90"
                    android:layout_height="wrap_content"
                    android:text="已收益:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_15"
                android:layout_marginBottom="@dimen/view_size_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/view_size_90"
                    android:layout_height="wrap_content"
                    android:text="购买时间:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>

</LinearLayout>