<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0EFEF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/order_time_icon"
                android:drawablePadding="4dp"
                tool:text="2020-1-10" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tool:text="18:28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E9E9E9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/view_size_10">

            <ImageView
                android:id="@+id/imgGoods"
                android:layout_width="95dp"
                android:layout_height="95dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:paddingStart="@dimen/view_size_10">

                <TextView
                    android:id="@+id/txtGoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    tool:text="上来看电视看到发烧咳嗽地方凉快地方是理科生的法律课" />

                <TextView
                    android:id="@+id/txtCountLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="商品数量："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtGoodNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtCountLab"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/txtCountLab"
                    android:textColor="#020202"
                    android:textSize="12sp"
                    tool:text="1箱" />


                <TextView
                    android:id="@+id/txtBuyCountLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtCountLab"
                    android:layout_marginBottom="10dp"
                    android:text="购买数量："
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txtOrderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtBuyCountLab"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/txtBuyCountLab"
                    android:textColor="#020202"
                    android:textSize="12sp"
                    tool:text="1" />

                <TextView
                    android:id="@+id/txtCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#FE3A3C"
                    android:textSize="15sp"
                    tool:text="5200" />

                <TextView
                    android:id="@+id/txtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txtCost"
                    android:text="￥"
                    android:textColor="#FE3A3C"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txtUnit"
                    android:text="实付："
                    android:textColor="#838282"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E9E9E9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="#838282"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/exOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#030303"
                android:textSize="14sp"
                tool:text="23732874823938932" />


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_fe3a3c_4dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#FE3A3C"
                android:textSize="14sp"
                tool:text="已发送" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>