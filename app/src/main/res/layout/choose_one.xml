<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/view_size_10">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_12dp"
        android:gravity="center"
        android:padding="@dimen/view_size_15"
        android:text="@string/cancel"
        android:textColor="@color/lan_pressed"
        android:textSize="@dimen/text_size_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel"
        android:layout_marginBottom="@dimen/view_size_10"
        android:background="@drawable/white_12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_60"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/view_size_15"
            android:textColor="@color/lan_pressed"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_0.1"
            android:background="@color/color_969696" />

        <TextView
            android:id="@+id/select_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_60"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/view_size_15"
            android:textColor="@color/lan_pressed"
            android:textSize="@dimen/text_size_20"

            />

    </LinearLayout>

</RelativeLayout>