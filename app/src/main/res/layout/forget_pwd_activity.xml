<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/view_size_9"
            android:paddingTop="@dimen/view_size_15"
            android:paddingRight="@dimen/view_size_9"
            android:paddingBottom="@dimen/view_size_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_icon" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView_title_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_size_35"
            android:layout_marginTop="@dimen/view_size_65"
            android:text="忘记密码?"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title_title_bar"
            android:layout_marginStart="@dimen/view_size_35"
            android:layout_marginTop="@dimen/view_size_12"
            android:text="请通过注册的手机号码进行密码重置"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_size_60"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginStart="@dimen/view_size_37"
            android:layout_marginTop="@dimen/view_size_10"
            android:layout_marginEnd="@dimen/view_size_37"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_20"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入您的ID/手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/light"
                android:textColorHint="@color/color_969696"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_19"
                android:src="@mipmap/phone_icon" />

            <TextView
                android:id="@+id/phone_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/view_size_15"
                android:background="@color/color_D9D9D9" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginStart="@dimen/view_size_37"
            android:layout_marginTop="@dimen/view_size_10"
            android:layout_marginEnd="@dimen/view_size_37"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_70"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入手机验证码"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/light"
                android:textColorHint="@color/color_969696"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_19"
                android:src="@mipmap/verify_code" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/view_size_15"
                android:background="@color/color_D9D9D9" />

            <TextView
                android:id="@+id/forget_get_captcha"
                android:layout_width="@dimen/view_size_60"
                android:layout_height="@dimen/view_size_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:background="@drawable/cb1b1d_2dp"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginStart="@dimen/view_size_37"
            android:layout_marginTop="@dimen/view_size_10"
            android:layout_marginEnd="@dimen/view_size_37"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_19"
                android:src="@mipmap/pwd_icon" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_30"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/light"
                android:textColorHint="@color/color_969696"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/checkShowPwd"
                android:layout_width="wrap_content"
                android:padding="@dimen/view_size_2"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_pwd_show"
                android:paddingLeft="@dimen/view_size_2"
                android:paddingRight="@dimen/view_size_2" />

            <TextView
                android:id="@+id/pwd_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/view_size_15"
                android:background="@color/color_D9D9D9" />

        </RelativeLayout>
