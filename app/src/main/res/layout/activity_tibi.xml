<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/view_size_15">

            
            <TextView
                android:id="@+id/procedures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_15"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="余额:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="币种:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="钱包地址:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:layout_toRightOf="@id/address_text"
                    android:background="@null"
                    android:digits="1234567890."
                    android:gravity="right"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="申请数量:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:layout_toRightOf="@id/number_text"
                    android:background="@null"
                    android:digits="1234567890."
                    android:gravity="right"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:id="@+id/paypwd_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付密码:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/paypwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:layout_toRightOf="@id/paypwd_text"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_40"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:id="@+id/code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="短信验证码:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_size_20"
                    android:layout_toLeftOf="@+id/get_captcha"
                    android:layout_toRightOf="@+id/code_text"
                    android:background="@null"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/get_captcha"
                    android:layout_width="@dimen/view_size_80"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/color_1490D8"
                    android:textSize="@dimen/text_size_12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_150"
                android:layout_marginTop="@dimen/view_size_1"
                android:background="@drawable/white_6dp"
                android:paddingLeft="@dimen/view_size_10"
                android:paddingRight="@dimen/view_size_10">

                <TextView
                    android:id="@+id/image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:text="上传提币钱包二维码:"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_size_13" />

                <RelativeLayout
                    android:layout_width="@dimen/view_size_60"
                    android:layout_height="@dimen/view_size_60"
                    android:layout_below="@+id/image_text"
                    android:layout_marginBottom="@dimen/view_size_30"
                    android:layout_marginTop="@dimen/view_size_30">

                    <ImageView
                        android:id="@+id/add_image"
                        android:layout_width="@dimen/view_size_60"
                        android:layout_height="@dimen/view_size_60"
                        android:src="@mipmap/addphoto_icon" />

                    <ImageView
                        android:id="@+id/delete_img"
                        android:layout_width="@dimen/view_size_20"
                        android:layout_height="@dimen/view_size_20"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/massage_close_button"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/confirm_modift"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_marginRight="@dimen/view_size_10"
                android:layout_marginTop="@dimen/view_size_30"
                android:background="@drawable/dcb981_6dp"
                android:gravity="center"
                android:text="确认申请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
