<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_size_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="姓名:"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入姓名"
            />

        <TextView
            android:layout_marginTop="@dimen/view_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="银行卡号:"
            />

        <EditText
            android:id="@+id/cardid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入银行卡号"
            />

        <TextView
            android:layout_marginTop="@dimen/view_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="开户银行:"
            />

        <EditText
            android:id="@+id/bankdeposit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入开户银行"
            />

        <TextView
            android:layout_marginTop="@dimen/view_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="开户地址(选填):"
            />

        <EditText
            android:id="@+id/bankbranch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入开户地址"
            />

        <TextView
            android:id="@+id/confirm_modift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginTop="@dimen/view_size_40"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"
            android:background="@drawable/dcb981_6dp"
            />


    </LinearLayout>

</LinearLayout>