<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_size_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="姓名:"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入姓名"
            />

        <TextView
            android:layout_marginTop="@dimen/view_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_size_3"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"
            android:text="账号:"
            />

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_45"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@drawable/white_6dp"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/light"
            android:padding="@dimen/view_size_5"
            android:hint="请输入支付宝账号"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_150"
            android:background="@drawable/white_6dp"
            android:layout_marginTop="@dimen/view_size_30"
            android:paddingLeft="@dimen/view_size_10"
            android:paddingRight="@dimen/view_size_10">

            <TextView
                android:id="@+id/image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:layout_marginTop="@dimen/view_size_10"
                android:text="上传收款二维码(选填):"
                android:textColor="@color/light"/>

            <RelativeLayout
                android:layout_width="@dimen/view_size_60"
                android:layout_height="@dimen/view_size_60"
                android:layout_marginTop="@dimen/view_size_30"
                android:layout_marginBottom="@dimen/view_size_30"
                android:layout_below="@+id/image_text">
                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="@dimen/view_size_60"
                    android:layout_height="@dimen/view_size_60"
                    android:src="@mipmap/addphoto_icon"
                    />
                <ImageView
                    android:id="@+id/delete_img"
                    android:layout_width="@dimen/view_size_20"
                    android:layout_height="@dimen/view_size_20"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/massage_close_button"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/confirm_modift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50"
            android:layout_marginTop="@dimen/view_size_40"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"
            android:background="@drawable/dcb981_6dp"
            />


    </LinearLayout>

</LinearLayout>