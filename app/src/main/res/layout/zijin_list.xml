<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="@dimen/view_size_10"
       android:orientation="horizontal">

       <TextView
           android:layout_width="@dimen/view_size_120"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_14"
           android:textColor="@color/light"
           android:text="时间"/>
       <TextView
           android:layout_width="@dimen/view_size_40"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_14"
           android:textColor="@color/light"
           android:layout_marginLeft="@dimen/view_size_10"
           android:text="收支"/>
       <TextView
           android:layout_width="@dimen/view_size_60"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_14"
           android:textColor="@color/light"
           android:gravity="right"
           android:text="额度"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/view_size_10"
           android:textSize="@dimen/text_size_14"
           android:textColor="@color/light"
           android:gravity="right"
           android:ellipsize="end"
           android:text="备注"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_size_10"
        android:id="@+id/lay"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/view_size_120"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/light"
            />
        <TextView
            android:id="@+id/shouzhi"
            android:layout_width="@dimen/view_size_40"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_size_10"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/light"
            />
        <TextView
            android:id="@+id/edu"
            android:layout_width="@dimen/view_size_60"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/light"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_size_10"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/light"
            android:gravity="right"
            android:ellipsize="end"
           />
    </LinearLayout>
</LinearLayout>