<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_464A53"
    android:orientation="vertical">

        <include layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/view_size_15"
            android:paddingRight="@dimen/view_size_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
                android:layout_marginTop="@dimen/view_size_10"
                android:gravity="center_vertical"
                android:padding="@dimen/view_size_10"
                android:background="@drawable/button_32353c_6dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="我的分享:"
                    />
                <TextView
                    android:id="@+id/share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="@dimen/view_size_20"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
                android:layout_marginTop="@dimen/view_size_5"
                android:gravity="center_vertical"
                android:padding="@dimen/view_size_10"
                android:background="@drawable/button_32353c_6dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="社区分享:"
                    />
                <TextView
                    android:id="@+id/community_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="@dimen/view_size_20"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
                android:layout_marginTop="@dimen/view_size_10"
                android:gravity="center_vertical"
                android:padding="@dimen/view_size_10"
                android:background="@drawable/button_32353c_6dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="分享量化:"
                    />
                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fbdb9d"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="@dimen/view_size_20"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:text="我的直推:"
                android:layout_marginTop="@dimen/view_size_20"
                />

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/view_size_10"
                android:scrollbars="none"
                android:dividerHeight="0dp"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
