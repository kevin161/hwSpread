<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="@dimen/view_size_9"
        android:layout_marginEnd="@dimen/view_size_9"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/view_size_9">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/view_size_60"
            android:layout_height="@dimen/view_size_60"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_size_10"
            android:layout_marginEnd="@dimen/view_size_9"
            android:textColor="#4E4E4E"
            android:textSize="@dimen/text_size_12"
            tools:text="xkxkxksksisisidk,d" />
    </LinearLayout>
</LinearLayout>