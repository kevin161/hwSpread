<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50"
        android:background="@color/black"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_size_17"
                android:layout_height="@dimen/view_size_17"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_icon" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_toRightOf="@+id/back"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView_title_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="修改昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_marginLeft="@dimen/view_size_10"
            android:layout_marginRight="@dimen/view_size_10"
            android:background="@color/color_f0f0f0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:text="昵称"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_20"
                android:layout_marginRight="@dimen/view_size_10"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入昵称"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14"

                />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_30"
        android:layout_marginTop="@dimen/view_size_50"
        android:layout_marginRight="@dimen/view_size_30"
        android:background="@drawable/btn_3ba370_6dp"
        android:gravity="center"
        android:padding="@dimen/view_size_10"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />


</LinearLayout>