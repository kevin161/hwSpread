<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/message_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_size_10">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_32353C"
        />
        <TextView
            android:id="@+id/read_alert"
            android:layout_width="@dimen/view_size_10"
            android:layout_height="@dimen/view_size_10"
            android:layout_marginRight="@dimen/view_size_10"
            android:layout_toRightOf="@+id/title"
            android:layout_marginLeft="@dimen/view_size_10"
            android:visibility="invisible"
            android:background="@drawable/red_20dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color_CCCCCC"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toLeftOf="@+id/image"
            android:layout_marginRight="@dimen/view_size_10"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_32353C"
            android:maxLines="1"
            android:ellipsize="end"
            />
        
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/view_size_12"
            android:layout_height="@dimen/view_size_12"
            android:layout_marginTop="@dimen/view_size_4"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:background="@mipmap/youhuiquan_tiaojian"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_5"
        android:background="@color/color_f2f2f2"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>