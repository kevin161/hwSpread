<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/all"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side969696"
        android:orientation="vertical"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@color/color_969696"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_10">

            <TextView
                android:id="@+id/good_name_text"
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/good_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/good_name_text"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/view_size_10">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="订单数量："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/view_size_10">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="总金额："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="联系人："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_969696"
                android:gravity="right"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_time_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="发货时间："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/send_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/company_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/view_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="快递公司："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/express_no_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/view_size_10"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_size_70"
                android:layout_height="wrap_content"
                android:text="快递单号："
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/express_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/btn_re"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_10">
            
            <TextView
                android:id="@+id/commit"
                android:layout_width="@dimen/view_size_80"
                android:layout_height="@dimen/view_size_25"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_3ba370_20dp"/>


            <TextView
                android:id="@+id/wuliuxinxi"
                android:layout_width="@dimen/view_size_80"
                android:layout_height="@dimen/view_size_25"
                android:text="物流信息"
                android:textColor="@color/color_3BA370"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:layout_toLeftOf="@+id/commit"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_marginRight="@dimen/view_size_20"
             />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_10" />

</LinearLayout>