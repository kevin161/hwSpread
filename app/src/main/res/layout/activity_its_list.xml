<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_5" />

    <LinearLayout
        android:id="@+id/list_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_10"
        android:layout_marginRight="@dimen/view_size_10"
        android:background="@drawable/white_6dp"
        android:orientation="vertical"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_size_24"
                android:layout_height="@dimen/view_size_24"
                android:background="@mipmap/shop_icon" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_size_10"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_6B6B6B"
                android:textSize="@dimen/text_size_10"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_marginTop="@dimen/view_size_10"
            android:background="@color/color_e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_15">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_32353C"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/alipay"
                    android:layout_width="@dimen/view_size_21"
                    android:layout_height="@dimen/view_size_21"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_size_5"
                    android:background="@mipmap/alpay_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/wechat"
                    android:layout_width="@dimen/view_size_21"
                    android:layout_height="@dimen/view_size_21"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_size_5"
                    android:background="@mipmap/wechat_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/card"
                    android:layout_width="@dimen/view_size_21"
                    android:layout_height="@dimen/view_size_21"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/card"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限额:"
                android:textColor="@color/color_DCB981"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_size_10"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_11"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_size_10"
            android:layout_marginTop="@dimen/view_size_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余:"
                android:textColor="@color/color_DCB981"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_size_10"
                android:textColor="@color/light"
                android:textSize="@dimen/text_size_11"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/view_size_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/buy"
            android:layout_width="@dimen/view_size_100"
            android:layout_height="@dimen/view_size_30"
            android:background="@drawable/dcb981_6dp_left"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/sell"
            android:layout_width="@dimen/view_size_100"
            android:layout_height="@dimen/view_size_30"
            android:background="@drawable/dcb981_6dp_side_right"
            android:gravity="center"
            android:text="出售"
            android:textColor="@color/color_DCB981"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_5" />

</LinearLayout>