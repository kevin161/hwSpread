<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:background="@mipmap/person_center_header_bg" />


                <RelativeLayout
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_size_10"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/money_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_size_30"
                        android:layout_marginBottom="@dimen/view_size_20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_zijin"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="我的资金"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/score_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_jifen"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="我的积分"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/touzi_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_size_30"
                        android:layout_marginBottom="@dimen/view_size_20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_touzi"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="投资基金"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tongzheng_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/touzi_li"
                        android:layout_marginLeft="@dimen/view_size_30"
                        android:layout_marginBottom="@dimen/view_size_20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_zhengtong"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="通证基金"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chabei_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/touzi_li"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_chabei"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="我的茶贝"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/dianpu_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/touzi_li"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_size_30"
                        android:layout_marginBottom="@dimen/view_size_20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/view_size_40"
                            android:layout_height="@dimen/view_size_40"
                            android:background="@mipmap/p_dianpu"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:text="店铺查询"
                            android:textColor="@color/light"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/view_size_20"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="山林道" />


                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUserName"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:drawableStart="@mipmap/person_phone"
                    android:drawablePadding="3dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:text="13122229999" />


                <LinearLayout
                    android:id="@+id/layoutSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtUserName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/view_size_15"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="@color/white"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtUserName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/view_size_45"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首页"
                        android:textColor="@color/white"
                        android:textSize="9dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVipLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="130dp"
                    android:textColor="#FFE26D"
                    android:textSize="13sp"
                    tools:text="会员" />

                <TextView
                    android:id="@+id/txtVip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtVipLab"
                    android:layout_marginStart="15dp"
                    android:layout_toRightOf="@+id/txtVipLab"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:text="注册会员" />

                <TextView
                    android:id="@+id/txtUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtVip"
                    android:layout_alignLeft="@+id/txtVip"
                    android:layout_marginTop="6dp"
                    android:textColor="#878DB6"
                    android:textSize="11sp"
                    tools:text="ID:8283239823" />

                <LinearLayout
                    android:id="@+id/layoutGoAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="133dp"
                    android:layout_marginEnd="40dp"
                    android:background="@mipmap/person_yellow_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtGoAuth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C265B"
                        android:textSize="9sp"
                        tools:text="去实名" />

                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@mipmap/person_right_arrow" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageBackGround"
                    android:layout_marginLeft="@dimen/view_size_20"
                    android:layout_marginTop="@dimen/view_size_17"
                    android:layout_marginRight="@dimen/view_size_20"
                    android:background="@drawable/white_6dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/view_size_15"
                    android:paddingTop="@dimen/view_size_15"
                    android:paddingEnd="@dimen/view_size_15"
                    android:paddingBottom="@dimen/view_size_17">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="可用余额"
                            android:textColor="#575757"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/txtMyMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/label"
                            android:textColor="#222222"
                            android:textSize="15sp"
                            tools:text="348389.34" />


                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/view_size_6"
                            android:layout_height="@dimen/view_size_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/next" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="18dp"
                            android:layout_toLeftOf="@+id/image"
                            android:text="我的资金"
                            android:textColor="#575757"
                            android:textSize="13sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layoutMoney"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_size_20"
                        android:layout_marginTop="@dimen/view_size_17"
                        android:layout_marginRight="@dimen/view_size_20"
                        android:background="@drawable/white_6dp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/view_size_15"
                        android:paddingTop="@dimen/view_size_17"
                        android:paddingEnd="@dimen/view_size_15"
                        android:paddingBottom="@dimen/view_size_17">

                        <RelativeLayout
                            android:id="@+id/order_re"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的订单"
                                android:textColor="#575757"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="@dimen/view_size_6"
                                android:layout_height="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/next" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_size_1"
                            android:layout_marginTop="@dimen/view_size_10"
                            android:background="@color/color_f6f6f6" />

                        <RelativeLayout
                            android:id="@+id/extend_re"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_size_10"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的推广"
                                android:textColor="#575757"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="@dimen/view_size_6"
                                android:layout_height="@dimen/view_size_10"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/next" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_size_20"
                        android:layout_marginTop="@dimen/view_size_17"
                        android:layout_marginRight="@dimen/view_size_20"
                        android:layout_marginBottom="@dimen/view_size_17"
                        android:background="@drawable/white_6dp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/view_size_15"
                        android:paddingTop="@dimen/view_size_15"
                        android:paddingEnd="@dimen/view_size_15"
                        android:paddingBottom="@dimen/view_size_15">

                        <RelativeLayout
                            android:id="@+id/setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="地址管理"
                                android:textColor="#575757"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="@dimen/view_size_6"
                                android:layout_height="@dimen/view_size_10"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/next" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/view_size_20"
                        android:layout_marginBottom="@dimen/view_size_20"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/loginout"
                            android:layout_width="@dimen/view_size_250"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/round262523_20dp"
                            android:gravity="center"
                            android:padding="@dimen/view_size_10"
                            android:text="退出登录"
                            android:textColor="@color/white" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>