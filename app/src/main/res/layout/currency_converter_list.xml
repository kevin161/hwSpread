<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/view_size_60"
    android:paddingTop="@dimen/view_size_10"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/country_image"
        android:layout_width="@dimen/view_size_50"
        android:layout_height="@dimen/view_size_35"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/country_es"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_size_20"
        android:layout_toRightOf="@+id/country_image"
        android:textColor="@color/light"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:minWidth="@dimen/view_size_150"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_16"

            />

        <TextView
            android:id="@+id/country_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/text_size_14"

            />

    </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_0.1"
        android:layout_marginLeft="@dimen/view_size_70"
        android:background="@color/color_969696"
        />

</LinearLayout>