<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >


    <include layout="@layout/title_bar"></include>


    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="@dimen/view_size_200"
        android:layout_height="@dimen/view_size_200"
        android:layout_marginTop="@dimen/view_size_100"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_size_30"
        android:textColor="@color/light"
        android:textSize="@dimen/text_size_16"
        />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_size_50"
        android:layout_marginRight="@dimen/view_size_50"
        android:layout_marginTop="@dimen/view_size_50"
        android:padding="@dimen/view_size_15"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:text="在店消费"
        android:background="@drawable/btn_3ba370_6dp"
        />


</LinearLayout>