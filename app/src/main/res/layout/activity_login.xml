<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@mipmap/login_bc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/login_li"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/view_size_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/login_logo"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/login_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/view_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:padding="@dimen/view_size_10"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/number_icon"/>
                    <EditText
                        android:id="@+id/login_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入手机号"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:padding="@dimen/view_size_10"
                    android:layout_marginTop="@dimen/view_size_20"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/password_icon"/>
                    <EditText
                        android:id="@+id/login_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/to_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:layout_marginLeft="@dimen/view_size_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:text="忘记密码?"
                    />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dcb981_6dp"
                    android:padding="@dimen/view_size_15"
                    android:textColor="@color/light"
                    android:text="登   录"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_17"
                    android:layout_marginTop="@dimen/view_size_40"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_size_20">
                    <TextView
                        android:id="@+id/to_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15"
                        android:text="没有账号  立即注册"
                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_forget_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找回密码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/view_size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:padding="@dimen/view_size_10"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/number_icon"/>
                    <EditText
                        android:id="@+id/forget_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入手机号"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:padding="@dimen/view_size_10"
                    >

                    <ImageView
                        android:id="@+id/forget_captcha_img"
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/massage_icon"/>
                    <EditText
                        android:id="@+id/forget_captcha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入验证码"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:layout_toRightOf="@+id/forget_captcha_img"
                        android:layout_toLeftOf="@+id/forget_get_captcha"
                        android:digits="1234567890"
                        android:maxLength="6"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />

                    <TextView
                        android:id="@+id/forget_get_captcha"
                        android:layout_width="@dimen/view_size_80"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_1490D8"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_12"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:padding="@dimen/view_size_10"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/password_icon"/>
                    <EditText
                        android:id="@+id/forget_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请设置密码"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/white_6dp"
                    android:layout_marginTop="@dimen/view_size_10"
                    android:padding="@dimen/view_size_10"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/view_size_25"
                        android:layout_height="@dimen/view_size_25"
                        android:background="@mipmap/password_icon"/>
                    <EditText
                        android:id="@+id/forget_pwd2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请重输密码"
                        android:inputType="textPassword"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/view_size_15"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/light"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dcb981_6dp"
                    android:padding="@dimen/view_size_15"
                    android:textColor="@color/light"
                    android:text="确   定"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_17"
                    android:layout_marginTop="@dimen/view_size_20"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_size_20">
                    <TextView
                        android:id="@+id/to_login_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15"
                        android:text="账号立即登录"
                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_li"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:paddingTop="@dimen/view_size_10"
            android:paddingLeft="@dimen/view_size_16"
            android:paddingRight="@dimen/view_size_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:layout_marginTop="@dimen/view_size_10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                android:visibility="gone"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/yaoqing_icon"/>
                <EditText
                    android:id="@+id/register_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="邀请码"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/light"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_20"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:id="@+id/country_code_li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:textSize="@dimen/text_size_17"
                        android:text="+86"
                        />
                    
                    <ImageView
                        android:layout_width="@dimen/view_size_12"
                        android:layout_height="@dimen/view_size_7"
                        android:layout_marginLeft="@dimen/view_size_12"
                        android:background="@mipmap/xiala_icon"/>

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/view_size_1"
                    android:layout_height="match_parent"
                    android:background="@color/color_d2d2d2"
                    />

                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_size_45"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/light"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                >

                <ImageView
                    android:id="@+id/captcha_img"
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/massage_icon"/>
                <EditText
                    android:id="@+id/register_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:layout_toRightOf="@+id/captcha_img"
                    android:layout_toLeftOf="@+id/get_captcha"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/light"
                    />

                <TextView
                    android:id="@+id/get_captcha"
                    android:layout_width="@dimen/view_size_80"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_1490D8"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/password_icon"/>
                <EditText
                    android:id="@+id/register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请设置密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/light"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/password_icon"/>
                <EditText
                    android:id="@+id/register_pwd2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请重输密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/light"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/paycode_icon"/>
                <EditText
                    android:id="@+id/register_paypwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请设置支付密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:textColor="@color/light"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_6dp"
                android:layout_marginTop="@dimen/view_size_10"
                android:padding="@dimen/view_size_10"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/view_size_25"
                    android:layout_height="@dimen/view_size_25"
                    android:background="@mipmap/paycode_icon"/>
                <EditText
                    android:id="@+id/register_paypwd2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请重输支付密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/view_size_15"
                    android:textSize="@dimen/text_size_17"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:textColor="@color/light"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fc3b40_6dp"
                android:padding="@dimen/view_size_15"
                android:layout_marginTop="@dimen/view_size_30"
                android:textColor="@color/white"
                android:text="立即注册"
                android:gravity="center"
                android:textSize="@dimen/text_size_17"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_size_20">
                <TextView
                    android:id="@+id/to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:text="已有账号, 去登录"
                    />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>