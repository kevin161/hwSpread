<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50"
        android:background="@color/white"
        android:padding="@dimen/view_size_10">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_icon" />

            <TextView
                android:id="@+id/textView_title_title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_size_10"
                android:layout_toRightOf="@+id/back"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="确认订单"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/txtActionBarRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAddress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:paddingStart="@dimen/view_size_10"
        android:paddingEnd="@dimen/view_size_10">

        <TextView
            android:id="@+id/txtAddressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#363636"
            android:textSize="14sp"
            tool:text="说了开始奋斗" />

        <TextView
            android:id="@+id/txtAddressCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtAddressDetail"
            android:layout_marginBottom="8dp"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            tool:text="slsdlk" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAddressDetail"
            android:layout_marginTop="8dp"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            tool:text="slsdsssssslk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_right_black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/order_address_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_size_10"
        android:background="@drawable/white_8dp"
        android:orientation="horizontal"
        android:padding="@dimen/view_size_10">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:paddingStart="@dimen/view_size_10">

            <TextView
                android:id="@+id/txtGoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#212020"
                android:textSize="14sp"
                tool:text="上来看电视看到发烧咳嗽地方凉快地方是理科生的法律课" />

            <TextView
                android:id="@+id/txtCountLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="￥"
                android:textColor="#EC3537"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCountLab"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/txtCountLab"
                android:textColor="#EC3537"
                android:textSize="15sp"
                tool:text="23009.39" />


            <TextView
                android:id="@+id/txtBuyCountLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCountLab"
                android:layout_marginBottom="10dp"
                android:text="数量："
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txtOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtBuyCountLab"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@+id/txtBuyCountLab"
                android:textColor="#020202"
                android:textSize="12sp"
                android:text="1箱" />


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/view_size_10"
        android:paddingEnd="@dimen/view_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="账户余额"
            android:textColor="#1A1919"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:text="￥"
            android:textColor="#EC3537"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="#EC3537"
            android:textSize="18sp"
            tool:text="2300" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/order_submit_bg"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>